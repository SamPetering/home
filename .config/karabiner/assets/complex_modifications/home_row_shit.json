{
    "title": "Home Row Shift",
    "rules": [
        {
            "description": "Map 'j' to left shift and 'f' to right shift when held",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "j",
                        "modifiers": ["any"]
                    },
                    "to": [
                        {
                            "key_code": "j",
                            "modifiers": ["left_shift"]
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "j"
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f",
                        "modifiers": ["any"]
                    },
                    "to": [
                        {
                            "key_code": "f",
                            "modifiers": ["right_shift"]
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "f"
                        }
                    ]
                }
            ]
        }
    ]
}

